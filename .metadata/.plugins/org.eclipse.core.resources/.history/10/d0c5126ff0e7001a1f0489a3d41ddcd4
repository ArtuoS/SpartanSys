package SpartanSys;

import java.util.Scanner;

public class hotelSA {

    public static void main(String[] args) {
        int quarto = 1;

        while (quarto > 0) {

            System.out.println("Informe qual tipo de quarto você deseja : ");
            Scanner in = new Scanner(System.in);
            float tipoQuarto = in.nextInt();
            if (tipoQuarto == 1) {
                System.out.println("Há disponivel " + quarto + " quarto do tipo Suite Master");
                System.out.println("Você deseja esse " + quarto + " quarto? - Digite 1 para SIM e 0 para NÃO");
                quarto--;
                float desicao = in.nextInt();
                if (desicao == 1) {
                    System.out.println("Você digitou 1-SIM");
                }
                if (desicao == 0) {
                    System.out.println("Você digitou 0-NÃO");
                }
            }
        }
    }
}